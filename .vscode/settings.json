{
  "powermode.explosions.customCss": {},
  "powermode.explosions.customExplosions": [],
  "javascript.preferences.importModuleSpecifier": "auto",
  "typescript.preferences.importModuleSpecifier": "auto",
  "prettier.printWidth": 200, // 원하는 줄 길이로 설정합니다.
  "prettier.proseWrap": "never", // 줄바꿈 방지 설정입니다.
  "prettier.trailingComma": "es5", // 객체와 배열의 마지막에 쉼표 추가
  "prettier.bracketSpacing": false, // 객체 리터럴의 중괄호 사이에 공백 없음
  "prettier.semi": true, // 구문 끝에 세미콜론 추가
  "prettier.singleQuote": true, // 큰따옴표 대신 작은따옴표 사용
  "prettier.arrowParens": "avoid", // 단일 매개변수의 화살표 함수 괄호 제거
  "prettier.endOfLine": "lf", // 줄 끝을 LF로 통일
  "editor.formatOnSave": true, // 저장 시 자동 포맷팅 설정
  "files.trimTrailingWhitespace": true, // 불필요한 끝 공백 제거
  "[markdown]": {
    "files.trimTrailingWhitespace": false // Markdown 파일은 끝 공백 제거하지 않음
  },
  "files.trimFinalNewlines": true, // 파일 끝에 불필요한 줄바꿈 제거
  "files.insertFinalNewline": true, // 파일 끝에 항상 새 줄 추가
  "workbench.colorCustomizations": {
    "editor.selectionHighlightBackground": "#ff000050", // 빨간색 (투명도 50%)
    "editor.selectionHighlightBorder": "#ff0000" // 빨간색 테두리
  },
  "[javascript]": {
    "editor.hover.enabled": false // javascript 파일에서 코드위에 마우스 오버 시 안내팝업 안뜸
  },
  "files.associations": {
    "*.scss": "scss"
  },
  "editor.codeActionsOnSave": {
    "source.fixAll": "explicit"
  },
  "todohighlight.keywords": [
    {
      "text": "HACK:",
      "color": "#ffffff",
      "backgroundColor": "#8BA9F8",
      "overviewRulerColor": "#8BA9F8"
    },
    {
      "text": "NOTE:",
      "color": "#ffffff",
      "backgroundColor": "#FF7F00",
      "overviewRulerColor": "#FF7F00"
    },
    {
      "text": "BUG:",
      "color": "#ffffff",
      "backgroundColor": "#F44336",
      "overviewRulerColor": "#F44336"
    },
    {
      "text": "INFO:",
      "color": "#ffffff",
      "backgroundColor": "#2196F3",
      "overviewRulerColor": "#2196F3"
    },
    {
      "text": "OPTIMIZE:",
      "color": "#ffffff",
      "backgroundColor": "#9C27B0",
      "overviewRulerColor": "#9C27B0"
    },
    {
      "text": "REVIEW:",
      "color": "#FFFFFF",
      "backgroundColor": "#8AC038",
      "overviewRulerColor": "#8AC038"
    },
    {
      "text": "TEST:",
      "color": "#ffffff",
      "backgroundColor": "#ff859b",
      "overviewRulerColor": "#ff6984"
    },
    {
      "text": "IMPORT:",
      "color": "#ffffff",
      "backgroundColor": "#ff0000",
      "overviewRulerColor": "#ff0000"
    }
  ],
  "editor.quickSuggestions": false, // 자동완성 인텔리센스 팝업 hide
  "editor.suggestOnTriggerCharacters": false, // 자동완성 인텔리센스 팝업 hide
  "editor.parameterHints.enabled": false, // 자동완성 인텔리센스 팝업 hide
  "vim.normalModeKeyBindingsNonRecursive": [
    {
      "before": [
        ";",
        ";"
      ],
      "after": [
        "A",
        ";",
        "<Esc>"
      ]
    },
    {
      "before": [
        "<C-)>"
      ],
      "after": [
        "<C-o>",
        "l"
      ]
    }
  ]
}
